<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.Guideline
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0" />

    <ImageView
        android:id="@+id/tab_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="6dp"
        android:focusable="false"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line" />

    <com.android.baselibrary.view.MsgView
        android:id="@+id/msg_view"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="9"
        android:textColor="#ffffff"
        android:textSize="9sp"
        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="@id/tab_icon"
        app:layout_constraintRight_toRightOf="@id/tab_icon"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:mv_backgroundColor="#ff3a30"
        app:mv_isRadiusHalfHeight="true"
        app:mv_strokeColor="#ffffff"
        app:mv_strokeWidth="1dp"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tab_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textColor="@color/tab_text_normal"
        android:textSize="11sp"
        app:layout_constraintLeft_toLeftOf="@id/tab_icon"
        app:layout_constraintRight_toRightOf="@id/tab_icon"
        app:layout_constraintTop_toBottomOf="@id/tab_icon"
        tools:text="首页" />
</android.support.constraint.ConstraintLayout>