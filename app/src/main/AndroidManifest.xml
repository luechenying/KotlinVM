<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.demo.kotlinvm">

    <application
        android:name="com.android.demo.kotlinvm.base.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/App.Theme.Base">

        <!-- splash界面 -->
        <activity
            android:name="com.android.demo.kotlinvm.ui.main.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/App.Theme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 主页面 -->
        <activity
            android:name="com.android.demo.kotlinvm.ui.main.MainActivity"
            android:screenOrientation="portrait" />

        <!-- 视频播放详情页面 -->
        <activity
            android:name="com.android.demo.kotlinvm.ui.video.VideoDetailActivity"
            android:screenOrientation="portrait" />

        <!-- 分类详情 -->
        <activity
            android:name="com.android.demo.kotlinvm.ui.category.CategoryDetailActivity"
            android:screenOrientation="portrait" />


        <!-- 干货集中营Android列表 -->
        <activity
            android:name="com.android.demo.kotlinvm.ui.gank.GankAndroidActivity"
            android:screenOrientation="portrait" />

        <!-- 干货集中营Android列表 -->
        <activity
            android:name="com.android.demo.kotlinvm.ui.gank.CommunicateActivity"
            android:screenOrientation="portrait" />

        <!-- 干货集中营Android列表 -->
        <activity
            android:name="com.android.demo.kotlinvm.ui.account.AbountActivity"
            android:screenOrientation="portrait" />


    </application>

</manifest>